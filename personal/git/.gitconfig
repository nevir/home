[init]
  defaultBranch = main
[commit]
  gpgsign = true
[gpg]
  format = ssh
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[alias]
  co = checkout
  ci = commit
  st = status -s
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --no-merges
